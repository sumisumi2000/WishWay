<div class="mb-2">
  <%# バリデーションエラーメッセージ表示 %>
  <%= render 'shared/error', object: wish %>
</div>

<%= form_with model: wish, class: 'flex items-center justify-between mb-5', id: 'new' do |form| %>
  <%= form.text_field :title, placeholder: 'Wish の新規作成', class: "input input-bordered border-2 w-11/12 form-control" %>
  <%= form.submit value: '新規作成', class: "btn btn-accent" %>
<% end %>