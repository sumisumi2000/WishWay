<% content_for :head do %>
  <title>WishWay｜ログイン</title>
<% end %>

<div class="w-5/6 mx-auto max-w-screen-xl">
  <div class="mt-10 my-5">
    <h1 class="text-4xl md:text-5xl font-bold mb-10 pb-4 border-b-4 border-dashed border-primary text-center">
      ログイン
    </h1>
    <%= form_with url: login_path, method: :post do |form| %>
      <!-- メールアドレス入力欄 -->
      <%= form.label :email, 'メールアドレス', class: "label mb-3 w-full md:w-1/2 mx-auto" %>
      <%= form.text_field :email, value: @email, class: "input input-bordered form-control mb-6 w-full md:w-1/2 mx-auto" %>
      <!-- パスワード入力欄 -->
      <%= form.label :password, 'パスワード', class: "label mb-3 w-full md:w-1/2 mx-auto" %>
      <%= form.password_field :password, class: "input input-bordered form-control mb-6 w-full md:w-1/2 mx-auto" %>
      <div class="w-1/2 mx-auto flex justify-center text-center">
        <%= form.submit 'ログイン', class: "btn mt-1" %>
      </div>
    <% end %>
  </div>
  <div class="text-center text-sm">
    OR
  <div>
  <!-- Google ログイン -->
  <%= link_to auth_at_provider_path(provider: :google) do %>
    <%= image_tag "google_sign_in.png", class: "w-2/3 md:w-1/3 lg:w-1/4 xl:w-1/6 mx-auto py-5" %>
  <% end %>
  <div class="mx-auto text-center flex flex-col md:flex-row md:justify-center gap-y-3 md:gap-x-5 lg:gap-x-10">
    <%= link_to "新規登録はこちら", new_user_path, class: "link link-neutral text-base md:text-xl"%>
    <%= link_to "パスワードをお忘れの方はこちら", new_password_reset_path, class: "link link-neutral text-base md:text-xl"%>
  </div>
</div>