<% content_for :head do %>
  <title>WishWay｜パスワードリセット</title>
<% end %>

<%= form_with model: @user, url: password_reset_path(@token) do |form| %>
  <%= form.label :email %>
  <%= @user.email %>

  <%= form.label :password %>
  <%= form.password_field :password %>

  <%= form.label :password_confirmation %>
  <%= form.password_field :password_confirmation %>

  <%= form.submit %>
<% end %>