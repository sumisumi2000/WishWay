<%= current_user.name %>
<%= current_user.notification.is_required %>

<%= form_with model: current_user.notification, url: notification_path(current_user) do |form| %>
  <%= form.label :is_required, '通知の有無' %>
  <%= form.radio_button :is_required, true %>必要
  <%= form.radio_button :is_required, false %>不要
  <%= form.submit '保存する', class: "btn" %>
<% end %>